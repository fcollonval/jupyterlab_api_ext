{
  "compilerOptions": {
    "declaration": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES5",
    "outDir": "./lib",
    // "ES2015.Collection" has to be included in order to find type Set
    "lib": ["ES5", "ES2015.Promise", "DOM", "ES2015.Collection"],
    "types": []
  },
  "include": ["src/*"]
}
